---
import { Heading } from '@personal-projects/internal';
import type { HTMLAttributes } from 'astro/types';
type AcceptableLevels = 1 | 2 | 3 | 4;

type Props<T extends AcceptableLevels> = {
  level: T;
} & HTMLAttributes<`h${T}`>;

const {
  props: { level, id, ...attrs },
} = Astro;
---

<Heading {level} {id} class="text-left" {...attrs}>
  <slot />
</Heading>
