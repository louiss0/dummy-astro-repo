{
  "name": "libs/generators/astro",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/generators/astro/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/generators/astro",
        "main": "libs/generators/astro/src/index.ts",
        "tsConfig": "libs/generators/astro/tsconfig.lib.json",
        "assets": [
          "libs/generators/astro/*.md",
          {
            "input": "./libs/generators/astro/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/generators/astro/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/generators/astro",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/generators/astro",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/generators/astro/**/*.ts",
          "libs/generators/astro/package.json"
        ]
      }
    }
  },
  "tags": ["scope:shared"]
}
